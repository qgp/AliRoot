				set ( PACKSOFLAGS  ${SOFLAGS} -L${ALICE_ROOT}/lib/tgt_${ALICE_TARGET} -lPMDbase -lSTEER -lCDB -lSTEERBase -lRAWDatasim -lRAWDatabase -L${ROOTLIBDIR} -lVMC -lGeom)

