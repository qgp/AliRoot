install (
  DIRECTORY ../OCDB/FMD 
  DESTINATION OCDB
  PATTERN ".svn" EXCLUDE)


install (DIRECTORY scripts 
	 DESTINATION FMD
	 PATTERN ".svn" EXCLUDE 
         PATTERN ".d"   EXCLUDE 
	 PATTERN ".so"  EXCLUDE)

install (FILES Config.C
  	       MakeFMDFullMisAlignment.C
  	       MakeFMDResMisAlignment.C
  	       MakeFMDZeroMisAlignment.C
  	       Reconstruct.C
  	       Simulate.C
  	       ViewFMD.C
	 DESTINATION FMD)

