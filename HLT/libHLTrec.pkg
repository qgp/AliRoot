MODULE_DHDR:= 		

EINCLUDE := HLT/rec HLT/BASE HLT/BASE/HOMER STEER RAW

LIBRARY_DEP := -lHLTbase -lCDB -lESD -lSTEERbase -lSTEER -lRAWDatarec -lRAWDatabase 

include $(MODDIR)/hlt.conf

SRCS:=$(patsubst %,rec/%,$(MODULE_SRCS))
